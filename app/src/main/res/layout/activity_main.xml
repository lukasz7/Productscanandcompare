<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lukasz.productscanandcompare.MainActivity">

    <Button
        android:id="@+id/button_scan"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:text="@string/scanbutton"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:onClick="btn_scan_click"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:text="Content"
        android:id="@+id/scan_content"
        android:layout_width="337dp"
        android:layout_height="37dp"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_scan"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_scan"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.516"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/scan_format"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="Format"
        android:id="@+id/scan_format"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_scan"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@+id/button_scan"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.515" />

</android.support.constraint.ConstraintLayout>
