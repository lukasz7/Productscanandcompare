<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lukasz.productscanandcompare.Podglad">

    <Button
        android:id="@+id/addButton"
        android:onClick="addButtonClick"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/addbutton"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textViewNazwa"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Typ kodu"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/textViewKod"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Kod kreskowy"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNazwa" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="45dp"
        />

</android.support.constraint.ConstraintLayout>
